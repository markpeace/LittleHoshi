source 'https://rubygems.org'

gem 'rails', '3.2.8'

group :test, :development do
	gem 'sqlite3'
	gem 'taps'
end
group :production do
	gem 'pg'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

#Testing Frameworks
group :test, :development do
    gem 'rspec-rails'
	gem 'factory_girl_rails'
	gem 'faker'
	gem 'capybara'
	gem 'guard-rspec'
	gem 'shoulda'
end

group :cucumber do
    gem 'capybara'
    gem 'database_cleaner'
    gem 'cucumber-rails'
    gem 'cucumber'
    gem 'spork'
    gem 'launchy'
end

#Javascript Executable
gem 'execjs'
gem 'therubyracer'
gem 'jquery-rails'

gem 'bcrypt-ruby'

#Formatting
gem 'haml-rails'
gem 'google-webfonts'
gem 'blueprint-rails'
gem 'simple_form'


